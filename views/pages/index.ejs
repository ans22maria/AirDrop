<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
    <link href="/dist/css/select2.min.css" rel="stylesheet" />
    <script src="/dist/js/select2.min.js"></script>
    <script src="/javascript/index.js"></script>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <main>
      <div class="card-body">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Book Flights</h3>
          </div>

          <div class="card-body">
            <div class="form-group">
              <div class="col-md-12">
                <label>Select Your Boarding Point</label>
                <select
                  id="boardingPointSelector"
                  class="form-control"
                  name="boardingPointSelector"
                ></select>
              </div>
            </div>
            <div class="form-group">
              <div id="destination-div" class="col-md-12">
                <label>Select Your Destination</label>
                <select
                  id="destinationSelector"
                  class="form-control"
                  name="destinationSelector"
                ></select>
              </div>
            </div>
            <div id="seat-div">
              <div class="form-group">
                <div class="col-md-12">
                  <label>Select Your Seat Preference</label>
                  <select
                    id="seatSelector"
                    class="form-control cost"
                    name="seatSelector"
                  ></select>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-12">
                  <label>Select Your Meal Preference</label>
                  <select
                    id="mealSelector"
                    class="form-control cost"
                    name="mealSelector"
                  ></select>
                </div>
              </div>
            </div>
            <div id="summary"></div>
          </div>
          <div class="card-footer">
            <label> Login to Book Tickets</label>
          </div>
        </div>
      </div>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
